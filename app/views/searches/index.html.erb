<html>
  <header>
      <nav>
        <h4><center>Adam's Search App</center></h4>
          <% current_user %>
            <% if logged_in? %>
              <a href='/users/show'>Prior Searches</a>
              <a href='/logout'>Log out</a>
              <% else %>
              <a href='/sessions/new'>Login</a>
              <a href='/users/new'>Register</a>
            <% end %>
      </nav>
  </header>

  <body>
    <br></br>
    <br></br>
    <br></br>
    <br></br>
  <% if logged_in? %>
    <form action="/searches" method="post">
  		<fieldset><legend>Search URL:</legend>
        <input  type="text" name="search[url]" placeholder="Search...">
  			<input type="submit" value="Search" id="sub">
  		</fieldset>
  	</form>
    <% else %>
    <h2>You need to be logged in to search ;)</h2>
    <% end %>

<% if @search %>
      <% @search.h1_tags.each do |h1| %>
      <p> <%= h1 %> </p>
      <% end %>

      <% @search.h2_tags.each do |h2| %>
      <p> <%= h2 %> </p>
      <% end %>

      <% @search.h3_tags.each do |h3| %>
      <p> <%= h3 %> </p>
      <% end %>

      <% else %>
      <% end %>



  </body>
</html>
